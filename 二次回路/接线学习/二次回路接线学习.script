key_map{''定义点击空格键之后播放什么动画
	name{空格键}
	key{space}
	enable{false}
	group{2111}
	reaction{
		type{key down}
		action{
			program{
				if(stepnum==1){
					astart("电源开关-接触器")
				}
				else if(stepnum==2){
					astart("电源指示灯接线")
				}
				else if(stepnum==3){
					astart("IO盒供电接线")
				}
				else if(stepnum==4){
					astart("IPC供电接线")
				}
				else if(stepnum==5){
					astart("示教器接线")
				}
			}
		}
	}
}



